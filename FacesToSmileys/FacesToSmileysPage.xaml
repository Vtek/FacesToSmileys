<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" xmlns:local="clr-namespace:FacesToSmileys" x:Class="FacesToSmileys.FacesToSmileysPage">
    <ContentPage.Padding>
        <OnPlatform x:TypeArguments="Thickness">
          <OnPlatform.iOS>
            0, 20, 0, 0
          </OnPlatform.iOS>
        </OnPlatform>
    </ContentPage.Padding>
	<StackLayout>
        <Button Text="Take a picture" Clicked="Button_Clicked"></Button>
		<Image x:Name="image" HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand"></Image>
	</StackLayout>
</ContentPage>
